<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Register</title>
  </head>
  <body>
    <h1>Register</h1>
    <ul>
      <% if(typeof errors != 'undefined'){%>
        <% errors.forEach(error=>{%>
        <li><%= error.message %></li>
        <% }) %>
        <% } %>
    </ul>
    <form action="/register" method="POST" id="register" class="register-group">
      <p>Name</p>
      <input type="text" id="name" name="name" placeholder="Name"  required>
      <p>Username</p>
      <input type="text" name="username" id="username"  placeholder="Enter Username" required>
      <p>Password</p>
      <input type="password" name="password" placeholder="Enter Password" id="password" required>
      <p>Repeat Password</p>
      <input type="password" name="password2" placeholder="Repeat Password" id="password2" required>
      <input type="submit" name="submit-btn" value="Register" id="submit-btn">
      <a href="/login">Registered? Login here</a>
  </form>
  </body>
</html>